        top: 20,
        left: 17,
        color: "black",
        font :{
                fontSize: 30,
                fontFamily: Alloy.CFG.font_bold
        }
}
"#headliner":
{
        layout: "horizontal",
        width: "100%",
        left: 10,
        height: 10,
        top: 5

}
"#line": {
